# Production Environment Configuration
# DO NOT COMMIT TO VERSION CONTROL

# Frontend Configuration
VITE_API_URL=https://api.xordon.com
VITE_DEV_MODE=false

# Database Configuration (SECURE)
DB_DRIVER=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=xordon_prod
DB_USER=xordon_user
DB_PASS=CHANGE_THIS_STRONG_PASSWORD_123!@#
DB_SSL_MODE=REQUIRED

# Signalwire Configuration (SECURE)
SIGNALWIRE_PROJECT_ID=your-production-project-id
SIGNALWIRE_API_TOKEN=your-production-api-token
SIGNALWIRE_SPACE_URL=your-space.signalwire.com
